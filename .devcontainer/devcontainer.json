{
  "build": {
    "args": {
      "VARIANT": "ubuntu-20.04"
    },
    "dockerfile": "Dockerfile"
  },
  "extensions": [
    "ms-vscode.cpptools"
  ],
  "name": "C++",
  "remoteUser": "vscode",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "/bin/bash"
  }
}
